<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ticksy Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body class="admin-body">
    <header class="admin-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a href="/" class="logo text-decoration-none">Ticksy Admin</a>
            <div class="user-info">
                <span>Welcome, @Context.Session.GetString("Username")</span>
                <a href="/Account/Logout" class="btn btn-sm btn-outline-dark ms-3">Logout</a>
            </div>
        </div>
    </header>

    <div class="admin-container">
        <aside class="admin-sidebar">
            <nav>
                <ul class="admin-nav">
                    <li class="admin-nav-item" data-section="dashboard">
                        <a href="#" onclick="showSection('dashboard')">Dashboard</a>
                    </li>
                    <li class="admin-nav-item" data-section="users">
                        <a href="#" onclick="showSection('users')">Users</a>
                    </li>
                    <li class="admin-nav-item" data-section="events">
                        <a href="#" onclick="showSection('events')">Events</a>
                    </li>
                    <li class="admin-nav-item" data-section="transactions">
                        <a href="#" onclick="showSection('transactions')">Transactions</a>
                    </li>
                </ul>
            </nav>
        </aside>

        <main class="admin-main">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 