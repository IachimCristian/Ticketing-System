@page
@using Microsoft.AspNetCore.Http
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="landing-page">
    <div class="featured-events">
        <h2 style="margin-bottom: 20px;">Featured Events</h2>
        <div class="event-cards">
            @if (Model.FeaturedEvents.Any())
            {
                foreach (var eventItem in Model.FeaturedEvents)
                {
                    <div class="event-card">
                        @if (!string.IsNullOrEmpty(eventItem.ImageUrl))
                        {
                            <img src="@eventItem.ImageUrl" class="event-img" alt="@eventItem.Title">
                        }
                        else
                        {
                            <div class="placeholder-img">
                                <span>X</span>
                            </div>
                        }
                        <div class="event-info">
                            <h3>@eventItem.Title</h3>
                            <p>@eventItem.Date</p>
                        </div>
                        <a asp-page="/Events/Details" asp-route-id="@eventItem.Id" class="card-link"></a>
                    </div>
                }
            }
            else
            {
                <div class="no-events">
                    <p>No upcoming events found.</p>
                    <p>Check back later or create your own event!</p>
                </div>
            }
        </div>
    </div>
    
    <div class="browse-events-section">
        <a asp-page="/Events/Index" class="btn btn-primary">Browse Events</a>
        @if (Model.HttpContext.Session.GetString("UserType") == "Organizer")
        {
            <a asp-page="/Events/Create" class="btn btn-outline-dark ms-2">Create Event</a>
        }
    </div>
</div>

<style>
    .landing-page {
        text-align: center;
        padding: 30px;
        background-color: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        position: relative;
    }

    .landing-page::after {
        content: "";
        position: absolute;
        top: 10px;
        right: -10px;
        bottom: -10px;
        left: 10px;
        background-color: rgba(0,0,0,0.05);
        z-index: -1;
    }

    .event-cards {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin-top: 30px;
    }

    .event-card {
        width: 220px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border: none;
        position: relative;
        transition: transform 0.3s ease;
        background-color: white;
    }

    .event-card::after {
        content: "";
        position: absolute;
        top: 5px;
        right: -5px;
        bottom: -5px;
        left: 5px;
        background-color: rgba(0,0,0,0.1);
        z-index: -1;
    }

    .event-card:hover {
        transform: translateY(-5px);
    }

    .placeholder-img {
        height: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
    }

    .placeholder-img span {
        font-size: 40px;
        color: #aaa;
    }
    
    .event-img {
        height: 150px;
        width: 100%;
        object-fit: cover;
    }

    .event-info {
        padding: 15px;
        background-color: white;
    }

    .event-info h3 {
        margin: 0;
        font-size: 18px;
        font-weight: 600;
        color: #212121;
    }

    .event-info p {
        margin: 5px 0 0;
        font-size: 14px;
        color: #666;
    }

    .card-link {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
    }

    .browse-events-section {
        margin-top: 40px;
    }

    .btn-primary {
        padding: 12px 30px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 0;
        background-color: #212121;
        border-color: #212121;
    }

    .btn-primary:hover {
        background-color: #000;
        border-color: #000;
    }
    
    .btn-outline-dark {
        padding: 12px 30px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 0;
    }
    
    .no-events {
        width: 100%;
        padding: 30px;
        background-color: #f9f9f9;
        border: 1px solid #eee;
    }
</style>
