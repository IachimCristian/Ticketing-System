@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="landing-page">
    <div class="featured-events">
        <h2 style="margin-bottom: 20px;">Featured Events</h2>
        <div class="event-cards">
            <div class="event-card">
                <div class="placeholder-img">
                    <span>X</span>
                </div>
                <div class="event-info">
                    <h3>Music Festival</h3>
                    <p>June 15, 2023</p>
                </div>
            </div>
            <div class="event-card">
                <div class="placeholder-img">
                    <span>X</span>
                </div>
                <div class="event-info">
                    <h3>Tech Conference</h3>
                    <p>July 10, 2023</p>
                </div>
            </div>
            <div class="event-card">
                <div class="placeholder-img">
                    <span>X</span>
                </div>
                <div class="event-info">
                    <h3>Food Festival</h3>
                    <p>August 5, 2023</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="browse-events-section">
        <a asp-page="/Events/Index" class="btn btn-primary">Browse Events</a>
    </div>
</div>

<style>
    .landing-page {
        text-align: center;
        padding: 30px;
        background-color: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        position: relative;
    }

    .landing-page::after {
        content: "";
        position: absolute;
        top: 10px;
        right: -10px;
        bottom: -10px;
        left: 10px;
        background-color: rgba(0,0,0,0.05);
        z-index: -1;
    }

    .event-cards {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin-top: 30px;
    }

    .event-card {
        width: 220px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border: none;
        position: relative;
        transition: transform 0.3s ease;
        background-color: white;
    }

    .event-card::after {
        content: "";
        position: absolute;
        top: 5px;
        right: -5px;
        bottom: -5px;
        left: 5px;
        background-color: rgba(0,0,0,0.1);
        z-index: -1;
    }

    .event-card:hover {
        transform: translateY(-5px);
    }

    .placeholder-img {
        height: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
    }

    .placeholder-img span {
        font-size: 40px;
        color: #aaa;
    }

    .event-info {
        padding: 15px;
        background-color: white;
    }

    .event-info h3 {
        margin: 0;
        font-size: 18px;
        font-weight: 600;
        color: #212121;
    }

    .event-info p {
        margin: 5px 0 0;
        font-size: 14px;
        color: #666;
    }

    .browse-events-section {
        margin-top: 40px;
    }

    .btn-primary {
        padding: 12px 30px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 0;
        background-color: #212121;
        border-color: #212121;
    }

    .btn-primary:hover {
        background-color: #000;
        border-color: #000;
    }
</style>
