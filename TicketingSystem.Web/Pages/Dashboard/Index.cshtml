@page
@model TicketingSystem.Web.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <img src="~/images/logo-no-background.png" alt="Ticksy" style="height: 40px;" />
    </div>
    <a asp-page="/Account/Logout" class="btn btn-outline-dark btn-sm">Logout</a>
</div>

<h2 class="fs-4 mb-3">User Dashboard</h2>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Purchased Tickets</h5>
    </div>
    <div class="card-body">
        @if (Model.PurchasedEvents.Any())
        {
            <div class="list-group">
                @foreach (var ticket in Model.PurchasedEvents)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">@ticket.EventName</h6>
                            <small class="text-muted">@ticket.Date.ToString("MMM dd, yyyy") â€¢ @ticket.Status</small>
                        </div>
                        <a asp-page="/Events/Details" asp-route-id="@ticket.Id" class="btn btn-sm btn-outline-dark">View</a>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted mb-0">You haven't purchased any tickets yet.</p>
        }
    </div>
</div>

<div class="row g-2 mb-4">
    @foreach (var item in Model.UpcomingEvents)
    {
        <div class="col-md-4 col-sm-6 mb-2">
            <div class="card h-100 event-card">
                <div class="event-image-placeholder">
                    <span>X</span>
                </div>
                <div class="card-body">
                    <h5 class="card-title fs-6">@item.Title</h5>
                    <small class="text-muted d-block mb-2">@item.Date.ToString("MMM dd, yyyy")</small>
                </div>
                <div class="card-footer text-center">
                    <a asp-page="/Events/Details" asp-route-id="@item.Id" class="btn btn-dark btn-sm">Buy</a>
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center">
    <a asp-page="/Events/Index" class="btn btn-dark">Browse Events</a>
</div> 