@page "{id}"
@model TicketingSystem.Web.Pages.Events.DetailsModel
@{
    ViewData["Title"] = "Event Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="logo">
                        <img src="~/images/logo-no-background.png" alt="Ticksy" class="logo-img" />
                    </div>
                    <div>
                        <a href="/Events" class="btn btn-outline-primary">Back</a>
                    </div>
                </div>
                <h2 class="text-center mb-4">Event Details</h2>
                <div class="row align-items-center">
                    <div class="col-md-5 text-center mb-3 mb-md-0">
                        <div class="placeholder-img d-flex align-items-center justify-content-center" style="height: 180px; width: 100%; border: 1px solid #e0e0e0;">
                            <span class="display-1">X</span>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="mb-3">
                            <strong>Date:</strong> @Model.EventDate.ToString("MMM dd, yyyy")
                        </div>
                        <div class="mb-2">
                            <strong>Location:</strong> @Model.Location
                        </div>
                        <div class="mt-3">
                            <a asp-page="/Tickets/Purchase" asp-route-eventId="@Model.Id" class="btn btn-dark btn-sm">Buy Ticket</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 